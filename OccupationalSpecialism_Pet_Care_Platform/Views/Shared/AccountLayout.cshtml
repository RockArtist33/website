<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OccupationalSpecialism_Pet_Care_Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OccupationalSpecialism_Pet_Care_Platform.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
</head>
<body>
    <header style="position:fixed;width:100%;z-index:1;">
        <nav style="position:relative" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div>
                    <img id="HMenu" onclick="hideDropdown(this.id)" src="/img/svg/HMenu.svg" />
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="flex-fill"></div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pet Care</a>
                    <div class="flex-fill"></div>
                    <div class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
        <div id="HMenudropdown" class="HMenu hide">
            <div id="HMenudropdownInner " class="HMenuInner hide d-flex flex-row">
                <div style="width:75%;margin-right:18px;" class="d-flex flex-column">
                    <a class="profileButton  d-flex flex-row">
                        <img style="margin:auto;margin-left:23px;width:32px;height:32px;" src="/img/svg/Clipboard.svg">
                        <cleanText style="margin-left:27px;" class="profileText">Records</cleanText>
                    </a>
                    <a class="profileButton  d-flex flex-row">
                        <img style="margin:auto;margin-left:20px;width:32px;height:32px;" src="/img/svg/walking-with-dog.svg">
                        <cleanText class="profileText">Pet Services</cleanText>
                    </a>
                    <a class="profileButton  d-flex flex-row">
                        <img style="margin:auto;margin-left:20px;width:32px;height:32px;" src="/img/svg/dog.svg">
                        <cleanText class="profileText">My Pets</cleanText>
                    </a>
                </div>
                <img onclick="hideDropdown('HMenu')" style="height:30px;transform:translate(5px,5px);" src="~/img/svg/Arrow.svg">
            </div>
        </div>
    </header>
    <div style="position:relative;top:55px;z-index:0;" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
